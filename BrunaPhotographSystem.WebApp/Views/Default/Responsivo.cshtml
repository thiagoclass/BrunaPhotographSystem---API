        @{
            var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
            var showBanner = !consentFeature?.CanTrack ?? false;
            var cookieString = consentFeature?.CreateConsentCookie();
        }
        @if (showBanner)
        {
            <div id="cookieConsent" style="margin-top:5rem;" class="alert alert-light alert-dismissible fade show" role="alert">
                <div class="cookiealert-container">
                    <b>Você gosta de cookies?</b> &#x1F36A; Nós usamos cookies para garantir que você tenha a melhor esperiencia no uso do site. <a href="http://cookiesandyou.com/" target="_blank">Saiba mais.</a>
                    <button type="button" class="btn btn-outline-dark accept-policy" data-dismiss="alert" aria-label="Close" data-cookie-string="@cookieString">
                        <span aria-hidden="true">Eu Concordo</span>
                    </button>
                </div>
            </div>
            <script>
                (function () {
                    var button = document.querySelector("#cookieConsent button[data-cookie-string]");
                    button.addEventListener("click", function (event) {
                        document.cookie = button.dataset.cookieString;
                    }, false);
                })();
            </script>
        }



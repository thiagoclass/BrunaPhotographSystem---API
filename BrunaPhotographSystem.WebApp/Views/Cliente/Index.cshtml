@model IEnumerable<BrunaPhotographSystem.DomainModel.Entities.Cliente>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <link href="~/css/reset.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/css/Responsivo.css" rel="stylesheet" type="text/css" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Index</title>
</head>
<body>
    <div class="container">
        @if (ViewBag.Alerta != null)
        {
            <div class="alert alert-light alert-dismissible fade show" role="alert">
                <strong>@ViewBag.Alerta.Split("|")[0].ToString()</strong>@ViewBag.Alerta.Split("|")[1].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>


        }

        <p class="ml-4 display-1 text-light mx-auto"><strong>Cliente</strong></p>

        <table class="table table-borderless table-sm table-responsive mt-5">
            <thead>
                <tr style="color:white;">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    

                </tr>
            </thead>
            <tbody class="">
                @foreach (var item in Model)
                {
                    <tr style="color:white;">
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@item.Id.ToString()" class="btn btn-outline-primary btn-sm"><strong>Editar</strong></a>
                            <a asp-action="Remover" asp-route-id="@item.Id.ToString()" class="btn btn-outline-danger btn-sm"><strong>Excluir</strong></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mx-auto">
            <a asp-action="SistemaAdministrador" asp-controller="Default" class="btn btn-outline-info btn-sm">Voltar para Menu</a>
            <a asp-action="Cadastro" class="btn btn-outline-light btn-sm">Criar Novo</a>
        </div>
    </div>
</body>
</html>
